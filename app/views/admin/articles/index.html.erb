<h1>List of all Articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Body</th>
    <th>Time-created</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.author %></td>
      <td><%= article.text %></td>
      <td><%= article.created_at %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Delete', admin_article_path(article), 
                      method: :delete, 
                      data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
    </tr>
  <% end %>
</table>

<br>

