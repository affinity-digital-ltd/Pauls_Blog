<h3>Post a Comment</h3>
<%= render partial: "shared/form_errors", object: @comment %>
<%= form_for [ @article, @comment ] do |f| %>

  <div>
    <%= f.label :author_name %><br/>
    <%= f.text_field :author_name, required: :true, placeholder: :"Add your name here" %>
  </div>

  <div>
    <%= f.label :body %><br/>
    <%= f.text_area :body, required: :true, placeholder: :"Add your comment here" %>
  </div>
  
  <div>
    <%= f.submit 'Submit' %>
  </div>
<% end %>