  
<div class="c-comments-form">
  <%= render partial: "shared/form_errors", object: @comment %>
  <%= form_for [ @article, @comment ] do |f| %>
    <div>
      <%= f.label :name, class: "c-comments-form__name-label" %>
      <%= f.text_field :author_name, required: :true, placeholder: :"Add your name here", class: "c-comments-form__name-field" %>
    </div>
    <div>
      <%= f.label :comment, class: "c-comments-form__body-label" %>
      <%= f.text_area :body, required: :true, placeholder: :"Add your comment here", class: "c-comments-form__body-text" %>
    </div>
    <div>
      <%= f.submit 'Post', class: "c-comments-form__submit-btn" %>
    </div>
  <% end %>
</div>
    