<h1>List of all Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <!--<th>Body</th>-->
      <th>Date-Created</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.author %></td>
        <!--<td><%= article.text %></td>-->
        <td><%= article.created_at.to_date %></td>
        <td><%= link_to 'Show', article_path(article) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

