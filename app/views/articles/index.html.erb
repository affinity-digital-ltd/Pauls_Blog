      </div>
    </section>
    <section class="c-featured">
      <div class="o-featured__container">
        <h2 class="c-headers">Featured Article</h2>
        <div class="c-headers__divider--featured"></div>
        <div class="o-articles__container--featured">
          <%= link_to article_path(Article.featured), class: "c-article--path" do %>
            <div class="c-card__featured">
              <figure>
                <%= image_tag("html.jpg", alt: "An HTML illustration", class: "c-card__image") %>
              </figure>
              <div class="c-card__text--featured">
                <h3><%= Article.featured.title %></h3>
                <p><%= Article.featured.text.truncate_words(10) %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
    <section class="c-section__latest">
      <div class="o-latest__container">
        <h2 class="c-headers">Latest Articles</h2>
        <div class="c-headers__divider"></div>
        <div class="o-articles__container">
          <% @articles.each_with_index do |article, index| %>
            <%= link_to article_path(article), class: "c-article--path" do %>
            <div class="c-card">
              <figure>
                <%= image_tag("mac_user.jpg", alt: "A mobile phone in a hand", class: "c-card__image") %>
              </figure>
              <div class="c-card__text">
                <h3><%= article.title %></h3>
                <p><%= article.text.truncate_words(10) %></p>
              </div>
            </div>
            <% end %>
          <% end %>
        </div>
        <p class="c-load__btn"><%= link_to "Load More..." %></p>
      </div>
    </section>
  </main>
  
  <%= render 'shared/footer' %>
</div>



