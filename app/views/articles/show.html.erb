<article class="o-main-container">
  <div class="c-article">
    <h2 class="c-article__header"><%= @article.title %></h2>
    <div class="c-header-divider"></div>
    <h3 class="c-article__author">Article by <%= @article.author %></h3>
    <time class="c-article__published">Published: <%= @article.created_at.strftime("%b %-d %Y") %></time>
    <figure>
      <img class="c-article__image" src="<%= rails_blob_path(@article.image) %>"> 
    </figure>
    <div class="c-article__text">
      <p><%= markdown(@article.text) %></p>
    </div>
  </div>
  <%= render 'comments/user-comments' %>
  <%= link_to 'Back to Article List', articles_path, class: "c-user-comments__back-btn" %>
</article>



